
@{
    ViewBag.Title = "添加角色";
}
@section css{
}
<div class="row">
    <div class="col-xs-12"><h3>@ViewBag.Title</h3></div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4">
        @using (Html.BeginForm("Add", "Js", FormMethod.Post, new { id = "addForm" }))
            {

            <div class="form-group">
                <label for="jsmc">角色名称</label>
                <input type="text" name="jsmc" class="form-control" placeholder="角色名称" />
                <span style="color:orangered;"></span>
            </div>
                <div class="form-group">
                    <label for="jssm">角色说明</label>
                    <input type="text" name="jssm" class="form-control" />
                    <span style="color:orangered;"></span>
                </div>
                <div class="checkbox">
                    <label>
                        @Html.CheckBox("islock")
                        是否启用
                    </label>
                </div>

                <input id="btnAdd" type="button" class="btn btn-primary" value="添加" />
                @Html.ActionLink("返回", "List", null, new { @class = "btn btn-link" });
            }
    </div>
</div>

@section js{
    <script src="~/Assets/scripts/jquery.validate.js"></script>
    <script src="~/Assets/scripts/jsadd.js"></script>
}