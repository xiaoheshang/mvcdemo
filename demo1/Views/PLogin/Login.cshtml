
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <title>登陆页面</title>
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta http-equiv="Content-type" content="text/html;charset=utf-8">
    <meta name="description" content="湖南省教育考试院历年高招系统">
    <meta name="author" content="zk">
    @Styles.Render("~/Assets/css")
</head>
<body class="login">
    <div>@ViewBag.LoginState</div>
    <div class="content">

        @*<div class="logo">
                <img src="~/Assets/img/logo4.png" alt="" />
            </div>*@
        @using (Html.BeginForm("Login", "PLogin", FormMethod.Post, new { @class = "login-form", name = "f2", @id = "loginform" }))
        {
            @*<form class="login-form" name="f2" action="/Yh/Login" method="POST">*@
            <h3 class="form-title">权限管理系统</h3>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input type="text" class="form-control" placeholder="用户名" name="yhmc" id="yhmc" />
                    <span style="color:orangered;"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input type="password" class="form-control" name="yhmm" id="yhmm" placeholder="密码" />
                    <span style="color:orangered;"></span>
                </div>
            </div>

            <div class="form-group form-vcode">
                <div class="input-icon">
                    <i class="fa fa-photo"></i>
                    <input type="text" class="form-control" name="vcode" placeholder="验证码" /><a href="#"><img src="~/Assets/img/vcode.png" title="点击切换验证码" /></a>
                </div>
            </div>

            <div class="login-feedback" id="feedback">
                <p class="bg-danger">用户名或密码错误</p>
            </div>

            @*<div class="form-group">
                    <select class="form-control">
                        <option value="0">默认系统</option>
                        <option value="01">权限管理系统</option>
                        <option value="0101">会员管理系统</option>
                    </select>
                </div>*@

            <div class="btn-container">
                <input type="button" id="btnLogin" class="btn-login" value="登录">
            </div>

            @*</form>*@
        }
    </div>

    <div class="copyright">

    </div>
    @Scripts.Render("~/Assets/scripts")
    @Scripts.Render("~/Assets/login")
</body>
</html>