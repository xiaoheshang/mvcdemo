
@{
    ViewBag.Title = "添加用户";
}

@section css{
    
}
    <div class="row">
        <div class="col-xs-12"><h3>添加用户</h3></div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">
            @using (Html.BeginForm("Add", "Yh", FormMethod.Post, new { id = "addForm" }))
            {

                <div class="form-group">
                    <label for="yhmc">用户名称</label>
                    <input type="text" name="yhmc" class="form-control" placeholder="用户名称" />
                    <span style="color:orangered;"></span>
                </div>

                <div class="form-group">
                    <label for="yhmm">用户密码</label>
                    <input type="password" id="yhmm" name="yhmm" class="form-control" />
                    <span style="color:orangered;"></span>
                </div>
                <div class="form-group">
                    <label for="qryhmm">确认用户密码</label>
                    <input type="password" id="qryhmm" name="qryhmm" class="form-control" />
                    <span style="color:orangered;"></span>
                </div>
                <div class="form-group">
                    <label for="email">邮箱</label>
                    <input type="email" name="email" class="form-control" />
                    <span style="color:orangered;"></span>
                </div>

                <div class="form-group">
                    <label for="qq">QQ</label>
                    <input type="text" name="qq" class="form-control" />
                    <span style="color:orangered;"></span>
                </div>

                <div class="form-group">
                    <label for="lxdh">联系电话</label>
                    <input type="text" name="lxdh" class="form-control" />
                    <span style="color:orangered;"></span>
                </div>

                <div class="form-group">
                    <label for="zsxm">真实姓名</label>
                    <input type="text" name="zsxm" class="form-control" />
                    <span style="color:orangered;"></span>
                </div>
                <div class="checkbox">
                    <label>
                        @Html.CheckBox("islock")
                        是否启用
                    </label>
                </div>

                <input id="btnAdd" type="button" class="btn btn-primary" value="添加" />
                @Html.ActionLink("返回", "List",null,new { @class="btn btn-link"});
            }
        </div>
    </div>

@section js{
    <script src="~/Assets/scripts/jquery.validate.js"></script>
    <script src="~/Assets/scripts/yhadd.js"></script>
}

